{% extends 'base.html.twig' %}

{% block title %}Détail de l'œuvre{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto py-10 px-4">
        <h1 class="text-3xl font-bold mb-6">{{ oeuvre.title }}</h1>

        <p class="text-lg mb-4">
            <strong>Date de création :</strong> {{ oeuvre.creationDate ? oeuvre.creationDate|date('d/m/Y') : 'Non renseignée' }}
        </p>
        
        <div class="my-6 p-4">
            <p class="text-gray-400">{{ oeuvre.description ? oeuvre.description : 'Aucune description disponible' }}</p>
        </div>

        <div class="swiper-container mb-6 max-w-md min-w-full overflow-hidden relative">
            <div class="swiper-wrapper">
                {% for image in oeuvre.images %}
                    <div class="swiper-slide">
                        {% if image.link %}
                            <img src="{{ asset('/uploads/oeuvres/' ~ image.link) }}" class="w-full h-auto object-cover rounded-lg shadow-lg" alt="{{ image.title }}">
                        {% else %}
                            <p>Aucune image disponible</p>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>

            <!-- Navigation buttons -->
            <div class="swiper-button-next absolute top-1/2 right-0 transform -translate-y-1/2 text-white p-2">
                <span class="sr-only">Next</span>
            </div>
            <div class="swiper-button-prev absolute top-1/2 left-0 transform -translate-y-1/2 text-white p-2">
                <span class="sr-only">Previous</span>
            </div>
        </div>

    </div>

    <script>
        document.addEventListener('turbo:load', function () {
            const swiper = new Swiper('.swiper-container', {
                loop: true,  // Permet la boucle infinie
                preloadImages: true,
                spaceBetween: 5,
                slidesPerView: 2,
                autoplay: {
                    delay: 2500,  // Délai entre chaque transition
                    disableOnInteraction: false,
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                // Ajoute un effet de transition fluide
                speed: 600,  // Temps de transition entre les slides
                effect: 'slide',  // Effet de transition
            });

            // Réinitialiser la position pour s'assurer qu'il commence bien à la première image
            swiper.on('init', function() {
                swiper.slideTo(0); // Commence à l'index 0
            });

            // Initialisation du swiper
            swiper.init();
        });
    </script>
{% endblock %}
